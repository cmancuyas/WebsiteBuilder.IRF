@page
@model WebsiteBuilder.IRF.Pages.Dev.SeedOwnerModel
@{
    ViewData["Title"] = "Seed Owner";
}

<h2>Seed Owner User</h2>

@if (!string.IsNullOrWhiteSpace(Model.Message))
{
    <div style="padding:12px;border:1px solid #ddd;border-radius:8px;margin:10px 0;">
        @Model.Message
    </div>
}

<form method="post">
    <div>
        <label>Email</label><br />
        <input asp-for="Input.Email" style="width:360px;" />
    </div>

    <div style="margin-top:10px;">
        <label>Password</label><br />
        <input asp-for="Input.Password" type="password" style="width:360px;" />
    </div>

    <div style="margin-top:10px;">
        <label>First Name</label><br />
        <input asp-for="Input.FirstName" style="width:360px;" />
    </div>

    <div style="margin-top:10px;">
        <label>Last Name</label><br />
        <input asp-for="Input.LastName" style="width:360px;" />
    </div>

    <button type="submit" style="margin-top:14px;">Create Owner</button>
</form>
