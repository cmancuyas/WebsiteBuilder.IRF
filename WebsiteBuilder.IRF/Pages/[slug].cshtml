@page "/{**slug}"
@model WebsiteBuilder.IRF.Pages._slug_Model

@{
    ViewData["Title"] = Model.PageEntity?.MetaTitle
        ?? Model.PageEntity?.Title
        ?? "Page";
}

@if (Model.PageEntity == null)
{
    <div class="container py-5">
        <div class="alert alert-warning">
            Page not found.
        </div>
    </div>
    return;
}

@if (Model.IsPreview)
{
    <div class="container pt-3">
        <div class="alert alert-warning mb-0">
            Preview mode — this page may include unpublished changes.
        </div>
    </div>
}

<div class="container py-4">
    <h1 class="mb-4">@Model.PageEntity.Title</h1>

    @if (Model.PageEntity.Sections == null || !Model.PageEntity.Sections.Any())
    {
        <div class="alert alert-info">
            No sections available.
        </div>
    }
    else
    {
        foreach (var s in Model.PageEntity.Sections.OrderBy(x => x.SortOrder))
        {
            <div class="border rounded p-3 mb-3">
                <div class="fw-bold mb-2">
                    Section type: @s.TypeKey
                    <span class="text-muted">• Order: @s.SortOrder</span>
                </div>

                @if (string.IsNullOrWhiteSpace(s.ContentJson))
                {
                    <div class="text-muted">No content.</div>
                }
                else
                {
                    switch (s.TypeKey)
                    {
                        case "Hero":
                            <partial name="Shared/Sections/_Hero" model="s" />
                            break;

                        case "Text":
                            <partial name="Shared/Sections/_Text" model="s" />
                            break;

                        default:
                            <div class="fw-bold mb-2">Unknown section: @s.TypeKey</div>
                            <pre class="mb-0">@s.ContentJson</pre>
                            break;
                    }
                }
            </div>
        }
    }
</div>
