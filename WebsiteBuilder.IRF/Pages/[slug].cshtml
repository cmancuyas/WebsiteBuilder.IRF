@page "/{slug}"
@model WebsiteBuilder.IRF.Pages._slug_Model

@{
    ViewData["Title"] = Model.PageEntity?.MetaTitle
                        ?? Model.PageEntity?.Title
                        ?? "Page";
}

@if (Model.PageEntity is null)
{
    <div class="container py-5">
        <div class="alert alert-warning mb-0" role="alert">
            Page not found.
        </div>
    </div>
}
else
{
    @* Preview Banner *@
    @if (Model.IsPreviewMode)
    {
        <div class="container pt-3">
            <div class="alert alert-info d-flex align-items-center justify-content-between" role="alert">
                <div>
                    <strong>Preview mode</strong> — This page may not be published.
                </div>
                <div class="d-flex gap-2">
                    <a class="btn btn-sm btn-outline-primary" href="/@Model.PageEntity.Slug" target="_blank">Open published view</a>
                </div>
            </div>
        </div>
    }

    <div class="container py-4">
        @if (!string.IsNullOrWhiteSpace(Model.PageEntity.Title))
        {
            <h1 class="mb-4">@Model.PageEntity.Title</h1>
        }

        @* Optional meta description *@
        @if (!string.IsNullOrWhiteSpace(Model.PageEntity.MetaDescription))
        {
            <meta name="description" content="@Model.PageEntity.MetaDescription" />
        }

        @foreach (var s in (Model.PageEntity.Sections ?? new List<WebsiteBuilder.Models.PageSection>())
            .OrderBy(x => x.SortOrder)
            .ThenBy(x => x.Id))
        {
            <div class="border rounded p-3 mb-3">
                <div class="fw-bold">#@s.SortOrder — @s.TypeKey</div>
                <pre class="mb-0">@s.ContentJson</pre>
            </div>
        }
    </div>
}
