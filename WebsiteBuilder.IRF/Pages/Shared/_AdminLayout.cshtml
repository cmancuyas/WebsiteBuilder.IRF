@using WebsiteBuilder.IRF.Infrastructure.Tenancy
@inject ITenantContext TenantContext

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin - WebsiteBuilder.IRF</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebsiteBuilder.IRF.styles.css" asp-append-version="true" />

    @RenderSection("Head", required: false)
</head>
<body>

    <!-- Admin top bar -->
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" href="/admin/pages">
                    Admin
                    @if (TenantContext.IsResolved)
                    {
                        <span class="text-muted">- @TenantContext.Host</span>
                    }
                </a>

                <button class="navbar-toggler" type="button"
                        data-bs-toggle="collapse"
                        data-bs-target="#adminNavbar"
                        aria-controls="adminNavbar"
                        aria-expanded="false"
                        aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between" id="adminNavbar">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="/admin/pages">Pages</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="/admin/navigation">Navigation</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="/admin/media">Media</a>
                        </li>
                    </ul>

                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="/">View site</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2026 - WebsiteBuilder.IRF
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <!-- Admin-only vendor scripts -->
    <script src="https://cdn.jsdelivr.net/npm/sortablejs@1.15.2/Sortable.min.js"></script>

    <!-- Global Media Picker bridge (admin-only) -->
    <script>
        (function () {
            window.MediaPicker = {
                open: function ({ multiple, onSelect }) {
                    const pickerUrl = "/Admin/Media/Picker";

                    const w = window.open(
                        pickerUrl,
                        "mediaPicker",
                        "width=1200,height=800"
                    );

                    function handler(e) {
                        if (!e.data || e.data.type !== "media:selected") return;

                        window.removeEventListener("message", handler);
                        w.close();

                        if (typeof onSelect === "function") {
                            onSelect(e.data.items || []);
                        }
                    }

                    window.addEventListener("message", handler);
                }
            };
        })();
    </script>

    <!-- Admin-only live JSON validation -->
    <script src="~/js/admin/sections/live-json-validate.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
