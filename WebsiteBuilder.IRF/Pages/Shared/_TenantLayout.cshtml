@using WebsiteBuilder.IRF.Infrastructure.Tenancy
@inject ITenantContext TenantContext

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebsiteBuilder.IRF</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebsiteBuilder.IRF.styles.css" asp-append-version="true" />

    @RenderSection("Head", required: false)
</head>
<body>

    <!-- Tenant header nav (public) -->
    <partial name="_TenantHeaderNav" />

    <div class="container">
        <main role="main" class="pb-3">
            <partial name="_TenantBreadcrumbs" />
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted mt-4">
        <div class="container py-3">
            <partial name="_TenantFooterNav" />
            <div class="mt-2 small">
                &copy; 2026 - WebsiteBuilder.IRF
            </div>
        </div>
    </footer>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
