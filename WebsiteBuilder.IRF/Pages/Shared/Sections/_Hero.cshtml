@model WebsiteBuilder.Models.PageSection
@using System.Text.Json

@{
    string? headline = null;
    string? subheadline = null;

    if (!string.IsNullOrWhiteSpace(Model.SettingsJson))
    {
        try
        {
            using var doc = JsonDocument.Parse(Model.SettingsJson);
            var root = doc.RootElement;

            if (root.ValueKind == JsonValueKind.Object)
            {
                if (root.TryGetProperty("headline", out var h) && h.ValueKind == JsonValueKind.String)
                    headline = h.GetString();

                if (root.TryGetProperty("subheadline", out var sh) && sh.ValueKind == JsonValueKind.String)
                    subheadline = sh.GetString();
            }
        }
        catch
        {
            // ignore parse errors (validator should catch on publish)
        }
    }
}

<section class="py-5">
    <div class="container">
        <div class="text-center">
            @if (!string.IsNullOrWhiteSpace(headline))
            {
                <h1 class="display-5 fw-bold">@headline</h1>
            }
            else
            {
                <h1 class="display-6 fw-semibold text-muted">Hero</h1>
            }

            @if (!string.IsNullOrWhiteSpace(subheadline))
            {
                <p class="lead text-muted mt-3">@subheadline</p>
            }
        </div>
    </div>
</section>
