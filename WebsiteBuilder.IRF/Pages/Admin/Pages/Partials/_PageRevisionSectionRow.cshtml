@model WebsiteBuilder.IRF.Pages.Admin.Pages.EditModel.SectionRowRenderVm

@{
    var isEditable = (ViewData["IsEditable"] as bool?) ?? false;

    var sectionId = Model.Section.Id;
    var collapseId = $"sec-editor-{sectionId}";
    var editorPath = Model.EditorPartialPath;
}

<div class="card section-item"
     id="section-@sectionId"
     data-section-id="@sectionId"
     data-revision-section-id="@sectionId">

    <div class="card-body py-2 d-flex align-items-center justify-content-between">
        <div class="d-flex align-items-center gap-2">
            @if (isEditable)
            {
                <span class="me-2 cursor-grab" title="Drag to reorder" aria-label="Drag to reorder">⠿</span>
            }
            else
            {
                <span class="text-muted me-2" title="Reordering disabled">⠿</span>
            }

            <div>
                <div class="fw-semibold section-title">@Model.Title</div>
                <div class="text-muted small">Section ID: @sectionId</div>
            </div>
        </div>

        <div class="d-flex align-items-center gap-2">
            <button type="button"
                    class="btn btn-sm btn-outline-danger"
                    data-delete-revision-section="@sectionId"
                    @(isEditable ? null : "disabled")>
                Delete
            </button>

            <button type="button"
                    class="btn btn-sm btn-outline-secondary"
                    data-bs-toggle="collapse"
                    data-bs-target="#@collapseId"
                    aria-expanded="false"
                    aria-controls="@collapseId"
                    @(isEditable ? null : "disabled")>
                Edit
            </button>
        </div>
    </div>

    <div id="@collapseId" class="collapse border-top">
        <div class="p-3">
            <partial name="@editorPath" model="Model.Section" />
        </div>
    </div>
</div>
