@model WebsiteBuilder.IRF.Pages.Admin.Pages.EditModel.SectionRowRenderVm

@{
    var s = Model.Section;
    var collapseId = $"sec-editor-{s.Id}";
}

<div class="card section-item"
     id="section-@s.Id"
     data-section-id="@s.Id"
     data-revision-section-id="@s.Id">

    <div class="card-body py-2 d-flex align-items-center">
        <span class="me-2 cursor-grab" title="Drag to reorder" aria-label="Drag to reorder">⋮⋮</span>

        <div class="flex-grow-1">
            <div class="fw-semibold section-title">@Model.Title</div>
            <div class="text-muted small">Section ID: @s.Id</div>
        </div>

        <div class="d-flex align-items-center gap-2">
            <button type="button"
                    class="btn btn-sm btn-outline-danger"
                    data-delete-revision-section="@s.Id">
                Delete
            </button>

            <button type="button"
                    class="btn btn-sm btn-outline-secondary"
                    data-bs-toggle="collapse"
                    data-bs-target="#@collapseId"
                    aria-expanded="false"
                    aria-controls="@collapseId">
                Edit
            </button>
        </div>
    </div>

    <div id="@collapseId" class="collapse border-top">
        <div class="p-3">
            <partial name="@Model.EditorPartialPath" model="s" />
        </div>
    </div>
</div>
