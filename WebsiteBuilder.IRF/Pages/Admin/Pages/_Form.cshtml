@model WebsiteBuilder.IRF.ViewModels.Admin.Pages.PageEditVm
@using Microsoft.AspNetCore.Mvc.Rendering

<div class="mb-3">
    <label class="form-label" asp-for="Title"></label>
    <input class="form-control" asp-for="Title" />
    <span class="text-danger" asp-validation-for="Title"></span>
</div>

<div class="mb-3">
    <label class="form-label" asp-for="Slug"></label>
    <input class="form-control" asp-for="Slug" placeholder="e.g. about, listings" />
    <div class="form-text">
        This becomes the URL:
        <span class="text-danger">/your-slug</span>.
        Use lowercase and hyphens. No leading slashes.
    </div>
    <span class="text-danger" asp-validation-for="Slug"></span>
</div>

<div class="mb-3">
    <label class="form-label" asp-for="PageStatusId">Status</label>

    <select class="form-select"
            asp-for="PageStatusId"
            asp-items="@(ViewData["PageStatuses"] as IEnumerable<SelectListItem>)">
    </select>

    <span class="text-danger" asp-validation-for="PageStatusId"></span>
</div>

<div class="mb-3">
    <label class="form-label" asp-for="LayoutKey"></label>
    <input class="form-control"
           asp-for="LayoutKey"
           placeholder="e.g. Default, Home, Landing" />
    <span class="text-danger" asp-validation-for="LayoutKey"></span>
</div>

<hr />

<h5 class="mb-3">SEO</h5>

<div class="mb-3">
    <label class="form-label" asp-for="MetaTitle"></label>
    <input class="form-control" asp-for="MetaTitle" />
    <span class="text-danger" asp-validation-for="MetaTitle"></span>
</div>

<div class="mb-3">
    <label class="form-label" asp-for="MetaDescription"></label>
    <textarea class="form-control"
              asp-for="MetaDescription"
              rows="4"></textarea>
    <span class="text-danger" asp-validation-for="MetaDescription"></span>
</div>

<div class="mb-3">
    <label class="form-label" asp-for="OgImageAssetId"></label>
    <input class="form-control" asp-for="OgImageAssetId" />
    <span class="text-danger" asp-validation-for="OgImageAssetId"></span>
</div>
