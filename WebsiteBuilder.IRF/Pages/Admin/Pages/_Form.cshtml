@model WebsiteBuilder.IRF.ViewModels.Admin.Pages.PageEditVm
@using WebsiteBuilder.Models.Constants

<div class="row">
    <div class="col-lg-8">

        <div class="mb-3">
            <label asp-for="Title" class="form-label"></label>
            <input asp-for="Title" class="form-control" />
            <span class="text-danger" asp-validation-for="Title"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Slug" class="form-label"></label>
            <input asp-for="Slug" class="form-control" />
            <div class="form-text">
                Example: <code>home</code>, <code>about</code>, <code>contact</code>
            </div>
            <span class="text-danger" asp-validation-for="Slug"></span>
        </div>

        <div class="mb-3">
            <label asp-for="LayoutKey" class="form-label"></label>
            <input asp-for="LayoutKey" class="form-control" />
            <span class="text-danger" asp-validation-for="LayoutKey"></span>
        </div>

        <hr />

        <h6 class="mb-3">SEO</h6>

        <div class="mb-3">
            <label asp-for="MetaTitle" class="form-label"></label>
            <input asp-for="MetaTitle" class="form-control" />
            <span class="text-danger" asp-validation-for="MetaTitle"></span>
        </div>

        <div class="mb-3">
            <label asp-for="MetaDescription" class="form-label"></label>
            <textarea asp-for="MetaDescription" class="form-control" rows="3"></textarea>
            <span class="text-danger" asp-validation-for="MetaDescription"></span>
        </div>

        <div class="mb-3">
            <label asp-for="OgImageAssetId" class="form-label"></label>
            <input asp-for="OgImageAssetId" class="form-control" />
            <span class="text-danger" asp-validation-for="OgImageAssetId"></span>
        </div>

    </div>

    <div class="col-lg-4">

        <!-- READ-ONLY STATUS -->
        <div class="mb-3">
            <label class="form-label">Status</label>

            @{
                var statusText = Model.PageStatusId switch
                {
                    PageStatusIds.Draft => "Draft",
                    PageStatusIds.Published => "Published",
                    PageStatusIds.Archived => "Archived",
                    _ => "Unknown"
                };

                var statusClass = Model.PageStatusId switch
                {
                    PageStatusIds.Draft => "bg-secondary",
                    PageStatusIds.Published => "bg-success",
                    PageStatusIds.Archived => "bg-dark",
                    _ => "bg-light text-dark"
                };
            }

            <div>
                <span class="badge @statusClass">@statusText</span>
            </div>

            <div class="form-text mt-2">
                Status is controlled via <strong>Publish</strong> / <strong>Unpublish</strong>.
            </div>

            <!-- Keep posting the value, but user cannot change it -->
            <input type="hidden" asp-for="PageStatusId" />
        </div>

        <div class="form-check mb-3">
            <input asp-for="IsActive" class="form-check-input" />
            <label asp-for="IsActive" class="form-check-label"></label>
        </div>

        <div class="form-check mb-3">
            <input asp-for="IsDeleted" class="form-check-input" />
            <label asp-for="IsDeleted" class="form-check-label"></label>
        </div>

        <div class="mb-3">
            <label asp-for="PublishedAt" class="form-label"></label>
            <input asp-for="PublishedAt" class="form-control" readonly />
        </div>

    </div>
</div>
