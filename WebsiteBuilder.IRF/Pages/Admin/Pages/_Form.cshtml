@model WebsiteBuilder.IRF.ViewModels.Admin.Pages.PageEditVm
@{
    // PageStatuses is supplied via ViewData by the PageModel
    var statuses = ViewData["PageStatuses"] as IEnumerable<Microsoft.AspNetCore.Mvc.Rendering.SelectListItem>
                   ?? Enumerable.Empty<Microsoft.AspNetCore.Mvc.Rendering.SelectListItem>();
}

<div class="mb-3">
    <label class="form-label">Title</label>
    <input asp-for="Title" class="form-control" />
    <span asp-validation-for="Title" class="text-danger"></span>
</div>

<div class="mb-3">
    <label class="form-label">Slug</label>
    <input asp-for="Slug" class="form-control" placeholder="e.g. about, listings" />
    <div class="form-text">
        This becomes the URL: <code>/your-slug</code>. Use lowercase and hyphens. No leading slashes.
    </div>
    <span asp-validation-for="Slug" class="text-danger"></span>
</div>

<div class="mb-3">
    <label class="form-label">Status</label>
    <select asp-for="PageStatusId" class="form-select" asp-items="statuses"></select>
    <span asp-validation-for="PageStatusId" class="text-danger"></span>
</div>

<div class="mb-3">
    <label class="form-label">Layout Key</label>
    <input asp-for="LayoutKey" class="form-control" placeholder="e.g. Default, Home, Landing" />
    <span asp-validation-for="LayoutKey" class="text-danger"></span>
</div>

<hr class="my-4" />

<h5 class="mb-3">SEO</h5>

<div class="mb-3">
    <label class="form-label">Meta Title</label>
    <input asp-for="MetaTitle" class="form-control" />
    <span asp-validation-for="MetaTitle" class="text-danger"></span>
</div>

<div class="mb-3">
    <label class="form-label">Meta Description</label>
    <textarea asp-for="MetaDescription" class="form-control" rows="3"></textarea>
    <span asp-validation-for="MetaDescription" class="text-danger"></span>
</div>

