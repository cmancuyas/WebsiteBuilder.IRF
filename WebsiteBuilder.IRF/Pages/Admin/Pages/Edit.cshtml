@page "{id:int}"
@model WebsiteBuilder.IRF.Pages.Admin.Pages.EditModel
@using WebsiteBuilder.Models.Constants

@{
    ViewData["Title"] = "Edit Page";
}

<!-- Global anti-forgery token available for JS fetch calls -->
<form id="pageForm" method="post">
    @Html.AntiForgeryToken()
</form>
<div id="sectionFeedback"
     class="alert alert-info py-2 d-none"
     role="alert">
</div>

<div class="container py-4">

    <div class="d-flex align-items-center justify-content-between mb-3">
        <div>
            <h2 class="mb-0">Edit Page</h2>
            <div class="text-muted small">Tenant: @Model.TenantHost</div>
        </div>

        <div class="d-flex gap-2 align-items-center">

            <a class="btn btn-outline-secondary" asp-page="/Admin/Pages/Index">Back</a>

            <a class="btn btn-outline-primary" href="@Model.PreviewUrl">Preview</a>

            <a class="btn btn-outline-primary" href="@Model.PreviewUrl" target="_blank" rel="noopener">
                Open Preview
            </a>

            <div class="d-flex align-items-center gap-2">
                <span id="globalSaveIndicator" class="small text-muted">
                    All changes saved
                </span>

                <button type="button" class="btn btn-sm btn-outline-secondary d-none" id="retryFailedAutosavesBtn">
                    Retry
                </button>

                <span id="offlineBadge" class="badge bg-warning text-dark d-none">
                    Offline
                </span>
            </div>


            @* Publish *@
            @if (Model.CanPublish)
            {
                <form method="post" class="d-inline" asp-page-handler="Publish" asp-route-id="@Model.Input.Id">
                    <button id="btnPublish"
                            class="btn btn-success page-action-btn"
                            type="submit">
                        Publish
                    </button>
                </form>
            }
            else
            {
                <button type="button" class="btn btn-success" disabled>Publish</button>
            }

            @* Unpublish *@
            @if (Model.CanUnpublish)
            {
                <form method="post" class="d-inline" asp-page-handler="Unpublish" asp-route-id="@Model.Input.Id">
                    <button class="btn btn-warning page-action-btn"
                            type="submit">
                        Unpublish
                    </button>
                </form>
            }
            else
            {
                <button type="button" class="btn btn-outline-warning" disabled>Unpublish</button>
            }

            @* Archive *@
            @if (Model.CanArchive)
            {
                <form method="post" class="d-inline" asp-page-handler="Archive" asp-route-id="@Model.Input.Id">
                    <button class="btn btn-danger page-action-btn"
                            type="submit">
                        Archive
                    </button>
                </form>
            }
            else
            {
                <button type="button" class="btn btn-outline-danger" disabled>Archive</button>
            }

            @* Restore *@
            @if (Model.CanRestore)
            {
                <form method="post" class="d-inline" asp-page-handler="Restore" asp-route-id="@Model.Input.Id">
                    <button type="submit" class="btn btn-outline-secondary">Restore</button>
                </form>
            }
        </div>
    </div>

    @* Why Publish is disabled *@
    @if (!Model.CanPublish && Model.Input.PageStatusId != PageStatusIds.Published)
    {
        <div class="text-muted small mb-3">
            Publishing is disabled:
            <ul class="mb-0">
                @if (Model.IsArchived)
                {
                    <li>This page is archived. Restore it before publishing.</li>
                }
                @if (!Model.HasSlug)
                {
                    <li>Slug is required.</li>
                }
                @if (!Model.HasSections)
                {
                    <li>Add at least one section.</li>
                }
            </ul>
        </div>
    }

    @* Feedback *@
    @if (Model.SaveSuccess)
    {
        <div class="alert alert-success">Page saved successfully.</div>
    }

    @if (TempData["Success"] is string ok && !string.IsNullOrWhiteSpace(ok))
    {
        <div class="alert alert-success">@ok</div>
    }

    @if (TempData["Error"] is string err && !string.IsNullOrWhiteSpace(err))
    {
        <div class="alert alert-danger">@err</div>
    }

    <div class="row g-3">
        <div class="col-12 col-lg-7">
            <form id="pageForm" method="post" class="card shadow-sm">
                <div class="card-body">

                    <input type="hidden" asp-for="Input.Id" />

                    @* Shared fields *@
                    <partial name="_Form" for="Input" />

                    @* Navigation fields *@
                    <div class="form-check mt-3">
                        <input asp-for="Input.ShowInNavigation" class="form-check-input" />
                        <label asp-for="Input.ShowInNavigation" class="form-check-label"></label>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Input.NavigationOrder" class="form-label"></label>
                        <input asp-for="Input.NavigationOrder" class="form-control" />
                        <span class="text-danger" asp-validation-for="Input.NavigationOrder"></span>
                    </div>

                </div>

                <div class="card-footer d-flex justify-content-end gap-2">
                    <button type="submit" class="btn btn-primary" id="saveBtn" data-save-button>
                        Save
                    </button>
                </div>
            </form>
        </div>

        <div class="col-12 col-lg-5">
            <div class="card shadow-sm">
                <div class="card-header d-flex align-items-center justify-content-between">
                    <div>
                        <strong>Sections</strong>
                        <div class="text-muted small">Drag and drop to reorder.</div>
                    </div>

                    <div class="d-flex align-items-center gap-2">
                        <div class="btn-group" role="group" aria-label="Sections tabs">
                            <button type="button" class="btn btn-sm btn-outline-secondary active" id="tabSectionsBtn">
                                Sections <span class="badge bg-secondary ms-1" id="activeCountBadge">@Model.SectionCount</span>
                            </button>
                            <button type="button" class="btn btn-sm btn-outline-secondary" id="tabTrashBtn">
                                Trash <span class="badge bg-secondary ms-1" id="trashCountBadge">@Model.TrashCount</span>
                            </button>
                        </div>

                        <button type="button"
                                class="btn btn-sm btn-primary page-action-btn"
                                data-bs-toggle="modal"
                                data-bs-target="#addSectionModal"
                                id="addSectionBtn">
                            Add Section
                        </button>
                    </div>
                </div>


                <div class="card-body">
                    <!-- Undo banner -->
                    <div id="sectionUndoBanner" class="alert alert-warning d-none py-2" role="alert">
                        <div class="d-flex align-items-center justify-content-between gap-2">
                            <div class="small">
                                <strong>Section deleted.</strong> You can undo this action.
                            </div>
                            <div class="d-flex align-items-center gap-2">
                                <button type="button" class="btn btn-sm btn-outline-dark" id="undoDeleteBtn">Undo</button>
                                <button type="button" class="btn-close" aria-label="Close" id="closeUndoBannerBtn"></button>
                            </div>
                        </div>
                    </div>

                    <!-- Active sections -->
                    <div id="sectionsPanel">
                        @if (!Model.HasSections)
                        {
                            <div class="text-muted">No sections yet. Click <strong>Add Section</strong> to begin.</div>
                        }
                        else
                        {
                            <div id="sectionsList" class="vstack gap-2">
                                @foreach (var s in Model.Sections)
                                {
                                    var collapseId = $"sec-editor-{s.Id}";
                                    var editorPath = Model.GetEditorPartialPath(s);

                                    <div class="card section-item" id="section-@s.Id" data-section-id="@s.Id">
                                        <div class="card-body py-2 d-flex align-items-center">
                                            <span class="me-2 cursor-grab" title="Drag to reorder" aria-label="Drag to reorder">⋮⋮</span>

                                            <div class="flex-grow-1">
                                                <div class="fw-semibold section-title">@Model.GetSectionTitle(s)</div>
                                                <div class="text-muted small">Section ID: @s.Id</div>
                                            </div>

                                            <div class="d-flex align-items-center gap-2">
                                                <button type="button"
                                                        class="btn btn-sm btn-outline-danger"
                                                        onclick="deleteRevisionSection(@s.Id)">
                                                    Delete
                                                </button>

                                                <button type="button"
                                                        class="btn btn-sm btn-outline-secondary"
                                                        data-bs-toggle="collapse"
                                                        data-bs-target="#@collapseId"
                                                        aria-expanded="false"
                                                        aria-controls="@collapseId">
                                                    Edit
                                                </button>
                                            </div>
                                        </div>

                                        <div id="@collapseId" class="collapse border-top">
                                            <div class="p-3">
                                                <partial name="@editorPath" model="s" />
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        }
                    </div>

                    <!-- Trash sections -->
                    <div id="trashPanel" class="d-none">
                        @if (Model.TrashCount <= 0)
                        {
                            <div class="text-muted">Trash is empty.</div>
                        }
                        else
                        {
                            <div id="trashList" class="vstack gap-2">
                                @foreach (var s in Model.TrashedSections)
                                {
                                    <div class="card" id="trash-section-@s.Id" data-section-id="@s.Id">
                                        <div class="card-body py-2 d-flex align-items-center justify-content-between">
                                            <div>
                                                <div class="fw-semibold">@Model.GetSectionTitle(s)</div>
                                                <div class="text-muted small">Section ID: @s.Id</div>
                                            </div>

                                            <button type="button"
                                                    class="btn btn-sm btn-outline-primary"
                                                    onclick="restoreRevisionSection(@s.Id)">
                                                Restore
                                            </button>
                                        </div>
                                    </div>
                                }
                            </div>
                        }
                    </div>

                </div>

                <div class="card-footer small text-muted">
                    Reordering saves automatically.
                </div>
            </div>
        </div>
    </div>

</div>

@* Add Section Modal *@
<div class="modal fade" id="addSectionModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form method="post"
                  asp-page-handler="AddSection"
                  asp-route-id="@Model.Input.Id">
                @Html.AntiForgeryToken()

                <div class="modal-header">
                    <h5 class="modal-title">Add Section</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>

                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">Section Type</label>
                        <select class="form-select" name="sectionTypeId" required>
                            <option value="">-- Select --</option>
                            @foreach (var opt in Model.SectionTypeOptions)
                            {
                                <option value="@opt.Value">@opt.Text</option>
                            }
                        </select>
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Add</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <style>
        .cursor-grab {
            cursor: grab;
            user-select: none;
        }

        .sortable-ghost {
            opacity: .6;
        }
    </style>

    <script src="https://cdn.jsdelivr.net/npm/sortablejs@1.15.2/Sortable.min.js"></script>

    <script>
        // Shared anti-forgery token getter (robust)
        function getAntiForgeryToken() {
            const scoped = document.querySelector('#antiForgeryForm input[name="__RequestVerificationToken"]');
            if (scoped?.value) return scoped.value;

            const el = document.querySelector('input[name="__RequestVerificationToken"]');
            return el ? el.value : null;
        }

    </script>
    <script>
        (function () {
            const indicator = document.getElementById("globalSaveIndicator");
            const retryBtn = document.getElementById("retryFailedAutosavesBtn");
            const offlineBadge = document.getElementById("offlineBadge");

            const state = {
                saving: 0,
                failed: 0,
                lastSavedAt: null,
                retryQueue: new Map()
            };

            function fmt(d) {
                return d
                    ? `${String(d.getHours()).padStart(2,"0")}:${String(d.getMinutes()).padStart(2,"0")}`
                    : "";
            }

            function render() {
                if (!indicator) return;

                const offline = navigator.onLine === false;
                offlineBadge?.classList.toggle("d-none", !offline);

                retryBtn?.classList.toggle("d-none", state.failed === 0);

                if (offline) {
                    indicator.textContent = "Offline — changes not saved";
                    indicator.className = "small text-warning";
                    return;
                }

                if (state.saving > 0) {
                    indicator.textContent = "Saving…";
                    indicator.className = "small text-muted";
                    return;
                }

                if (state.failed > 0) {
                    indicator.textContent = "Save failed";
                    indicator.className = "small text-danger";
                    return;
                }

                if (window.PageDirty?._keys?.has("page")) {
                    indicator.textContent = "Unsaved page changes (click Save)";
                    indicator.className = "small text-warning";
                    return;
                }

                indicator.textContent = state.lastSavedAt
                    ? `All changes saved (Saved ${fmt(state.lastSavedAt)})`
                    : "All changes saved";
                indicator.className = "small text-success";
            }

            window.AutosaveUx = {
                onSaving() {
                    state.saving++;
                    render();
                },
                onSaved() {
                    state.saving = Math.max(0, state.saving - 1);
                    state.lastSavedAt = new Date();
                    render();
                },
                onFailed(sectionId, retryFn) {
                    state.saving = Math.max(0, state.saving - 1);
                    state.failed++;
                    if (retryFn) state.retryQueue.set(sectionId, retryFn);
                    render();
                },
                onRecovered(sectionId) {
                    // decrement saving just like a normal save completion
                    state.saving = Math.max(0, state.saving - 1);

                    if (state.failed > 0) state.failed--;
                    state.retryQueue.delete(sectionId);
                    state.lastSavedAt = new Date();
                    render();
                }

            };

            retryBtn?.addEventListener("click", async () => {
                for (const fn of state.retryQueue.values()) {
                    try { await fn(); } catch {}
                }
                render();
            });

            window.addEventListener("online", render);
            window.addEventListener("offline", render);
            document.addEventListener("DOMContentLoaded", render);
        })();
    </script>



    <script>
        // Section reorder (auto-save order)
        document.addEventListener("DOMContentLoaded", function () {
            const el = document.getElementById("sectionsList");
            if (!el) return;

            const publishBtn = document.getElementById("btnPublish");

            function getIds() {
                return Array.from(el.querySelectorAll(".section-item"))
                    .map(x => parseInt(x.getAttribute("data-section-id"), 10))
                    .filter(n => Number.isFinite(n));
            }

            function applyOrder(ids) {
                const map = new Map();
                el.querySelectorAll(".section-item").forEach(node => {
                    const id = parseInt(node.getAttribute("data-section-id"), 10);
                    if (Number.isFinite(id)) map.set(id, node);
                });

                // Re-append in the desired order (moves existing nodes)
                for (const id of ids) {
                    const node = map.get(id);
                    if (node) el.appendChild(node);
                }
            }

            let isSaving = false;
            let hasPendingChanges = false;

            // mark dirty during reorder
            function setSaving(state) {
                isSaving = state;
                hasPendingChanges = state;
                document.querySelectorAll(".page-action-btn").forEach(btn => {
                    btn.disabled = state || btn.disabled;
                });
            }

            window.addEventListener("beforeunload", function (e) {
                if (!hasPendingChanges) return;
                e.preventDefault();
                e.returnValue = "";
            });

            Sortable.create(el, {
                handle: ".cursor-grab",
                animation: 150,
                ghostClass: "sortable-ghost",
                onStart: function () {
                    // Capture order BEFORE drag, so we can rollback if save fails
                    el.dataset.prevOrder = JSON.stringify(getIds());
                },
                onEnd: async function () {
                    if (isSaving) return;

                    const ids = getIds();
                    const prev = (() => {
                        try { return JSON.parse(el.dataset.prevOrder || "[]"); } catch { return []; }
                    })();

                    const token = getAntiForgeryToken();

                    setSaving(true);

                    try {
                        const res = await fetch("?handler=ReorderSections", {
                            method: "POST",
                            headers: {
                                "Content-Type": "application/json",
                                ...(token ? { "RequestVerificationToken": token } : {})
                            },
                            body: JSON.stringify({
                                pageId: @Model.Input.Id,
                                orderedSectionIds: ids
                            })
                        });

                        const json = await res.json().catch(() => null);

                        if (!json || !json.ok) {
                            // rollback DOM
                            if (prev && prev.length) applyOrder(prev);
                            alert((json && json.message) ? json.message : "Failed to save order.");
                            return;
                        }

                        // Success (replace with your toast later)
                        // console.log("Section order saved");
                    } catch {
                        if (prev && prev.length) applyOrder(prev);
                        alert("Failed to save order.");
                    } finally {
                        setSaving(false);
                    }
                }
            });
        });
    </script>

    <script>
        // Soft delete / Undo / Trash UI for draft sections
        (function () {
            let lastDeleted = null;
            let undoTimer = null;

            function q(id) { return document.getElementById(id); }

            function toInt(val) {
                const n = parseInt(String(val), 10);
                return Number.isFinite(n) ? n : 0;
            }

            function incBadge(badgeId, delta) {
                const el = q(badgeId);
                if (!el) return;
                const next = toInt(el.textContent) + toInt(delta);
                el.textContent = String(Math.max(0, next));
            }

            function showUndoBanner(sectionId) {
                const banner = q("sectionUndoBanner");
                if (!banner) return;

                banner.classList.remove("d-none");
                lastDeleted = sectionId;

                if (undoTimer) clearTimeout(undoTimer);
                undoTimer = setTimeout(() => {
                    banner.classList.add("d-none");
                    lastDeleted = null;
                }, 12000);
            }

            function hideUndoBanner() {
                const banner = q("sectionUndoBanner");
                if (!banner) return;
                banner.classList.add("d-none");
                lastDeleted = null;
                if (undoTimer) clearTimeout(undoTimer);
                undoTimer = null;
            }

            function setActiveTab(tab) {
                const tabSectionsBtn = q("tabSectionsBtn");
                const tabTrashBtn = q("tabTrashBtn");
                const sectionsPanel = q("sectionsPanel");
                const trashPanel = q("trashPanel");
                const addBtn = q("addSectionBtn");

                if (!tabSectionsBtn || !tabTrashBtn || !sectionsPanel || !trashPanel) return;

                const isTrash = tab === "trash";

                tabSectionsBtn.classList.toggle("active", !isTrash);
                tabTrashBtn.classList.toggle("active", isTrash);

                sectionsPanel.classList.toggle("d-none", isTrash);
                trashPanel.classList.toggle("d-none", !isTrash);

                if (addBtn) addBtn.classList.toggle("d-none", isTrash);

                if (isTrash) hideUndoBanner();
            }

            async function postJson(handler, payload) {
                const token = getAntiForgeryToken();

                const res = await fetch(handler, {
                    method: "POST",
                    headers: {
                        "Content-Type": "application/json",
                        ...(token ? { "RequestVerificationToken": token } : {})
                    },
                    body: JSON.stringify(payload || {})
                });

                const data = await res.json().catch(() => null);
                if (!res.ok || !data || data.ok !== true) {
                    const msg = (data && (data.message || data.Message)) || "Request failed.";
                    throw new Error(msg);
                }
                return data;
            }

            function appendToTrash(sectionId, titleText) {
                const trashPanel = q("trashPanel");
                const trashList = q("trashList");

                if (!trashList && trashPanel) {
                    trashPanel.innerHTML = `<div id="trashList" class="vstack gap-2"></div>`;
                }

                const list = q("trashList");
                if (!list) return;

                const emptyMsg = trashPanel && trashPanel.querySelector('.text-muted');
                if (emptyMsg) emptyMsg.remove();

                const card = document.createElement("div");
                card.className = "card";
                card.id = `trash-section-${sectionId}`;
                card.setAttribute("data-section-id", String(sectionId));
                card.innerHTML = `
                    <div class="card-body py-2 d-flex align-items-center justify-content-between">
                        <div>
                            <div class="fw-semibold">${titleText || "Section"}</div>
                            <div class="text-muted small">Section ID: ${sectionId}</div>
                        </div>
                        <button type="button" class="btn btn-sm btn-outline-primary" onclick="restoreRevisionSection(${sectionId})">Restore</button>
                    </div>
                `;

                list.prepend(card);
            }

            window.deleteRevisionSection = async function (sectionId) {
                const id = toInt(sectionId);
                if (!id) return;

                const card = document.getElementById(`section-${id}`);
                const title = card ? (card.querySelector('.section-title')?.textContent || '').trim() : '';

                try {
                    await postJson("?handler=DeleteRevisionSection", { sectionId: id });

                    if (card) card.remove();

                    incBadge("activeCountBadge", -1);
                    incBadge("trashCountBadge", +1);

                    appendToTrash(id, title);
                    showUndoBanner(id);

                } catch (e) {
                    alert(e && e.message ? e.message : "Delete failed.");
                }
            };

            window.restoreRevisionSection = async function (sectionId) {
                const id = toInt(sectionId);
                if (!id) return;

                try {
                    await postJson("?handler=RestoreRevisionSection", { sectionId: id });

                    const trashCard = document.getElementById(`trash-section-${id}`);
                    if (trashCard) trashCard.remove();

                    incBadge("trashCountBadge", -1);

                    // Reload to reconstruct full editor card (partial views)
                    hideUndoBanner();
                    window.location.reload();

                } catch (e) {
                    alert(e && e.message ? e.message : "Restore failed.");
                }
            };

            document.addEventListener("DOMContentLoaded", function () {
                q("tabSectionsBtn")?.addEventListener("click", () => setActiveTab("sections"));
                q("tabTrashBtn")?.addEventListener("click", () => setActiveTab("trash"));

                q("undoDeleteBtn")?.addEventListener("click", function () {
                    if (!lastDeleted) return;
                    window.restoreRevisionSection(lastDeleted);
                });

                q("closeUndoBannerBtn")?.addEventListener("click", hideUndoBanner);

                setActiveTab("sections");
            });
        })();
    </script>

    <script>
        // Section autosave helper (authoritative)
        (function () {
            function showSectionFeedback(message, type = "info") {
                const el = document.getElementById("sectionFeedback");
                if (!el) return;

                el.className = `alert alert-${type} py-2`;
                el.textContent = message;
                el.classList.remove("d-none");

                setTimeout(() => el.classList.add("d-none"), 3000);
            }

            function debounce(fn, delay) {
                let t = null;
                return function () {
                    const ctx = this, args = arguments;
                    clearTimeout(t);
                    t = setTimeout(() => fn.apply(ctx, args), delay);
                };
            }

        function bindSectionAutoSave(sectionId, getSettingsJson, saveUrl, statusEl, errorsEl) {

            const dirtyKey = `section:${sectionId}`;
            let inFlight = 0;

            function clearErrors() {
                if (!errorsEl) return;
                errorsEl.classList.add("d-none");
                errorsEl.innerHTML = "";
            }

            function showErrors(errors) {
                if (!errorsEl) return;

                const list = Array.isArray(errors) ? errors : [];
                if (!list.length) {
                    clearErrors();
                    return;
                }

                errorsEl.classList.remove("d-none");
                errorsEl.innerHTML = `
                    <div class="alert alert-danger py-2 mb-0">
                        <div class="fw-semibold small mb-1">Please fix the following:</div>
                        <ul class="small mb-0">
                            ${list.map(e => `<li>${String(e)}</li>`).join("")}
                        </ul>
                    </div>
                `;
            }

            async function runSave() {

                window.AutosaveUx && window.AutosaveUx.onSaving(sectionId);

                const settingsJson = getSettingsJson();

                inFlight++;
                if (statusEl) {
                    statusEl.textContent = "Saving...";
                    statusEl.classList.remove("text-danger", "text-success");
                    statusEl.classList.add("text-muted");
                    statusEl.title = "";
                }

                try {
                    const token = getAntiForgeryToken();

                    const res = await fetch(saveUrl, {
                        method: "POST",
                        headers: {
                            "Content-Type": "application/json",
                            ...(token ? { "RequestVerificationToken": token } : {})
                        },
                        body: JSON.stringify({ sectionId, settingsJson })
                    });

                    const data = await res.json().catch(() => null);

                    if (!res.ok || !data || data.ok !== true) {
                        const errors = (data && (data.errors || data.Errors)) || [];
                        const message = (data && (data.message || data.Message)) || "Save failed.";
                        throw { message, errors };
                    }

                    inFlight--;
                    clearErrors();

                    // ✅ Clear dirty ONLY after a successful save
                    window.PageDirty && typeof window.PageDirty.clear === "function" && window.PageDirty.clear(dirtyKey);

                    window.AutosaveUx && window.AutosaveUx.onRecovered(sectionId);

                    if (inFlight === 0 && statusEl) {
                        statusEl.textContent = "Saved";
                        statusEl.classList.remove("text-muted", "text-danger");
                        statusEl.classList.add("text-success");
                    }

                    // if this section had failed before, mark it recovered; otherwise treat as normal saved
                    if (window.AutosaveUx) {
                        if (typeof window.AutosaveUx.onRecovered === "function") window.AutosaveUx.onRecovered(sectionId);
                        else window.AutosaveUx.onSaved(sectionId);
                    }

                    return data;
                } catch (e) {
                    inFlight--;

                    if (statusEl) {
                        statusEl.textContent = "Save failed";
                        statusEl.classList.remove("text-muted", "text-success");
                        statusEl.classList.add("text-danger");
                        statusEl.title = (e && e.message) ? e.message : "Error";
                    }

                    window.AutosaveUx && window.AutosaveUx.onFailed(sectionId, () => runSave());

                    const msg = (e && e.message) ? e.message : "Save failed.";
                    window.AutosaveUx && window.AutosaveUx.onFailed(sectionId, msg, () => runSave());

                    showErrors(e && e.errors ? e.errors : []);
                    return null;
                }
            }

            const debounced = debounce(runSave, 1000);

            return {
                notifyChanged: () => {
                    // ✅ Mark section dirty when user changes
                    window.PageDirty && typeof window.PageDirty.set === "function" && window.PageDirty.set(dirtyKey);
                    debounced();
                },
                saveNow: () => runSave()
            };
        }


            window.SectionAutoSave = {
                bindSectionAutoSave
            };

        })();
    </script>

    <script>
        (function () {
            // -----------------------------
            // Global dirty state
            // -----------------------------
            const Dirty = {
                _keys: new Set(),
                get isDirty() { return this._keys.size > 0; },

                // Mark dirty. If no key is provided, default to "page".
                set(key) {
                    this._keys.add(key || "page");
                },

                // Clear dirty state.
                // - clear() clears ALL dirty flags (used on full page save / navigation actions)
                // - clear(key) clears only that scope (used by autosaved sections)
                clear(key) {
                    if (!key) {
                        this._keys.clear();
                        return;
                    }
                    this._keys.delete(key);
                },

                confirmIfDirty(msg) {
                    if (!this.isDirty) return true;
                    return window.confirm(msg || "You have unsaved changes. Leave this page?");
                }
            };


            // Expose globally so section editors can call it
            window.PageDirty = Dirty;

            document.addEventListener("DOMContentLoaded", function () {
            const form = document.getElementById("pageForm") || document.querySelector("form:not(#antiForgeryForm)");

                if (!form) return;

                // Mark page-level dirty ONLY for page-scoped inputs
                form.addEventListener("input", function (e) {
                    const t = e.target;
                    if (!t) return;
                    if (t.name === "__RequestVerificationToken") return;

                    if (t.matches("input, textarea, select") &&
                        t.getAttribute("data-dirty-scope") === "page") {
                        Dirty.set("page");
                    }
                }, true);

                form.addEventListener("change", function (e) {
                    const t = e.target;
                    if (!t) return;
                    if (t.name === "__RequestVerificationToken") return;

                    if (t.matches("input, textarea, select") &&
                        t.getAttribute("data-dirty-scope") === "page") {
                        Dirty.set("page");
                    }
                }, true);


                // Clear dirty on normal Save submit
                form.addEventListener("submit", function () {
                    Dirty.clear();
                });

                // Intercept internal navigation (Cancel / Back / sidebar links)
                document.body.addEventListener("click", function (e) {
                    const a = e.target?.closest?.("a");
                    if (!a) return;

                    const href = a.getAttribute("href");
                    if (!href || href === "#" || href.startsWith("javascript:")) return;

                    if (a.getAttribute("data-bypass-dirty") === "true") return;

                    const target = (a.getAttribute("target") || "").toLowerCase();
                    if (target === "_blank") return;

                    if (!Dirty.confirmIfDirty()) {
                        e.preventDefault();
                        e.stopPropagation();
                    }
                }, true);
            });

            // Browser-level protection (refresh, tab close, URL change)
            window.addEventListener("beforeunload", function (e) {
                if (!Dirty.isDirty) return;
                e.preventDefault();
                e.returnValue = "";
            });
        })();
    </script>


