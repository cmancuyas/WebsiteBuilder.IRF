@page "/admin/pages/edit/{id:int}"
@model WebsiteBuilder.IRF.Pages.Admin.Pages.EditModel
@using WebsiteBuilder.IRF.ViewModels.Admin.Pages

<h2 class="mb-3">Edit Page</h2>

@if (Request.Query.ContainsKey("created"))
{
    <div class="alert alert-success">Page created successfully.</div>
}
@if (Request.Query.ContainsKey("saved"))
{
    <div class="alert alert-success">Changes saved.</div>
}

<form method="post" class="card">
    <div class="card-body">
        <input type="hidden" asp-for="Input.Id" />
        <partial name="_Form" model="Model.Input" />
    </div>

    <div class="card-footer d-flex gap-2 justify-content-end">
        <a class="btn btn-outline-secondary" href="/admin/pages">Back</a>
        <button type="submit" class="btn btn-primary">Save</button>
        <a class="btn btn-outline-secondary" href="/@Model.Input.Slug?preview=true" target="_blank">Preview</a>
        <a class="btn btn-outline-secondary" href="/@Model.Input.Slug" target="_blank">Open (Published)</a>

        <a class="btn btn-outline-secondary" href="/admin/pages/edit/@Model.Input.Id/sections">Sections</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
