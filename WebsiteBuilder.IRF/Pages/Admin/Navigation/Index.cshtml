@page
@model WebsiteBuilder.IRF.Pages.Admin.Navigation.IndexModel
@{
    ViewData["Title"] = "Navigation Builder";
}

<div class="container py-4">
    <div class="d-flex align-items-center justify-content-between mb-3">
        <div>
            <h2 class="mb-0">Navigation Builder</h2>
            <div class="text-muted small">Choose a menu to edit</div>
        </div>

        <a class="btn btn-outline-secondary" asp-page="/Admin/Pages/Index">Back to Pages</a>
    </div>

    <div class="row g-3">
        <div class="col-12 col-lg-6">
            <div class="card shadow-sm">
                <div class="card-header d-flex align-items-center justify-content-between">
                    <div class="fw-semibold">Header</div>
                    <a class="btn btn-sm btn-primary"
                       asp-page="/Admin/Navigation/Edit"
                       asp-route-menuId="1">
                        Edit Header
                    </a>
                </div>
                <div class="card-body">
                    <div class="text-muted small">
                        Edit the site’s main navigation (top header).
                    </div>
                </div>
            </div>
        </div>

        <div class="col-12 col-lg-6">
            <div class="card shadow-sm">
                <div class="card-header d-flex align-items-center justify-content-between">
                    <div class="fw-semibold">Footer</div>
                    <a class="btn btn-sm btn-primary"
                       asp-page="/Admin/Navigation/Edit"
                       asp-route-menuId="2">
                        Edit Footer
                    </a>
                </div>
                <div class="card-body">
                    <div class="text-muted small">
                        Edit footer links and secondary navigation.
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
