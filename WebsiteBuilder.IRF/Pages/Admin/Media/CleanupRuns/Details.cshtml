@page "{id:long}"
@model WebsiteBuilder.IRF.Pages.Admin.Media.CleanupRuns.DetailsModel
@{
    ViewData["Title"] = "Cleanup Run Details";
}

<h2 class="mb-3">Cleanup Run Details</h2>

@if (Model.Run is null)
{
    <div class="alert alert-warning">Run not found.</div>
    <a class="btn btn-secondary" asp-page="Index">Back</a>
    return;
}

<div class="card">
    <div class="card-body">
        <div class="d-flex justify-content-between align-items-start flex-wrap gap-2">
            <div>
                <div class="fw-semibold">Run #@Model.Run.Id</div>
                <div class="text-muted small">
                    Started: @Model.Run.StartedAtUtc.ToString("yyyy-MM-dd HH:mm") UTC
                    @if (Model.Run.FinishedAtUtc is not null)
                    {
                        <span class="ms-2">Finished: @Model.Run.FinishedAtUtc.Value.ToString("yyyy-MM-dd HH:mm") UTC</span>
                    }
                </div>
            </div>
            <span class="badge @Model.StatusBadge">@Model.Run.Status</span>
        </div>

        <hr />

        <dl class="row mb-0">
            <dt class="col-sm-3">Run Type</dt>
            <dd class="col-sm-9">@Model.Run.RunType</dd>
            <dt class="col-sm-3">Retention Days</dt>
            <dd class="col-sm-9">@Model.Run.RetentionDays</dd>
            <dt class="col-sm-3">Batch Size</dt>
            <dd class="col-sm-9">@Model.Run.BatchSize</dd>

            <dt class="col-sm-3">Eligible</dt>
            <dd class="col-sm-9">@Model.Run.EligibleCount</dd>
            <dt class="col-sm-3">Processed</dt>
            <dd class="col-sm-9">@Model.Run.ProcessedCount</dd>
            <dt class="col-sm-3">Deleted Originals</dt>
            <dd class="col-sm-9">@Model.Run.DeletedOriginalFilesCount</dd>
            <dt class="col-sm-3">Deleted Thumbs</dt>
            <dd class="col-sm-9">@Model.Run.DeletedThumbnailFilesCount</dd>
            <dt class="col-sm-3">Hard Deleted DB Rows</dt>
            <dd class="col-sm-9">@Model.Run.HardDeletedDbRowsCount</dd>
            <dt class="col-sm-3">Failed</dt>
            <dd class="col-sm-9">@Model.Run.FailedCount</dd>

            <dt class="col-sm-3">Error Summary</dt>
            <dd class="col-sm-9"><pre class="mb-0">@Model.Run.ErrorSummary</pre></dd>

            <dt class="col-sm-3">Notes</dt>
            <dd class="col-sm-9"><pre class="mb-0">@Model.Run.Notes</pre></dd>
        </dl>

        <div class="mt-3">
            <a class="btn btn-secondary" asp-page="Index">Back</a>
        </div>
    </div>
</div>
