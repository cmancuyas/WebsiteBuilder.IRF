@page
@model WebsiteBuilder.IRF.Pages.Admin.Media.Alerts.IndexModel
@{
    ViewData["Title"] = "Media Alerts";
}

<h2 class="mb-3">Media Alerts</h2>

<div class="card">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-striped mb-0">
                <thead class="table-light">
                    <tr>
                        <th style="width:110px;">Severity</th>
                        <th style="width:280px;">Subject</th>
                        <th>Message</th>
                        <th style="width:170px;">Created (UTC)</th>
                        <th style="width:120px;"></th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Alerts.Count == 0)
                    {
                        <tr><td colspan="5" class="text-center p-4 text-muted">No alerts.</td></tr>
                    }
                    else
                    {
                        foreach (var a in Model.Alerts)
                        {
                            <tr>
                                <td>
                                    <span class="badge @Model.GetSeverityBadgeClass(a.Severity)">
                                        @a.Severity
                                    </span>
                                </td>
                                <td>@a.Subject</td>
                                <td class="small">
                                    <div class="text-truncate" style="max-width: 720px;" title="@a.Message">
                                        @a.Message
                                    </div>
                                </td>
                                <td>@a.CreatedAt.ToString("yyyy-MM-dd HH:mm")</td>
                                <td class="text-end">
                                    @if (a.MediaCleanupRunLogId is long runId && runId > 0)
                                    {
                                        <a class="btn btn-sm btn-outline-secondary"
                                           href="/Admin/Media/CleanupRuns/Details/@runId">
                                            View run
                                        </a>
                                    }
                                    else
                                    {
                                        <span class="text-muted small">-</span>
                                    }
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
