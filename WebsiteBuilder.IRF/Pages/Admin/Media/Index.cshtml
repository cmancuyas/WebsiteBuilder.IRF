@page
@model WebsiteBuilder.IRF.Pages.Admin.Media.IndexModel

@{
    ViewData["Title"] = "Media";
}
<form id="antiForgeryForm" method="post">
    @Html.AntiForgeryToken()
</form>

<div class="d-flex align-items-center justify-content-between mb-3">
    <div>
        <h2 class="mb-0">Media</h2>
        <div class="text-muted small">Manage uploads and restore deleted assets.</div>
    </div>
    <div class="d-flex gap-2">
        <a class="btn btn-primary" asp-page="/Admin/Media/Upload">Upload</a>
        <a class="btn btn-outline-secondary" asp-page="/Admin/Media/List">Library</a>
        <a class="btn btn-outline-secondary" asp-page="/Admin/Media/Usage">Usage</a>
        <a class="btn btn-outline-danger" asp-page="/Admin/Media/Trash">
            Trash
            @if (Model.DeletedCount > 0)
            {
                <span class="badge bg-danger ms-1">@Model.DeletedCount</span>
            }
        </a>
    </div>
</div>
<div id="undoBar" class="alert alert-warning d-none align-items-center" role="alert">
    <span id="undoText">Media deleted.</span>
    <button id="undoBtn"
            type="button"
            class="btn btn-sm btn-outline-dark ms-2">
        Undo
    </button>
</div>

<div class="row g-3">
    <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                <div class="text-muted small">Active Media</div>
                <div class="fs-3 fw-semibold">@Model.ActiveCount</div>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                <div class="text-muted small">Deleted Media</div>
                <div class="fs-3 fw-semibold">@Model.DeletedCount</div>
                <div class="text-muted small">Restore before cleanup retention expires.</div>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                <div class="text-muted small">Shortcuts</div>
                <div class="d-grid gap-2 mt-2">
                    <a class="btn btn-outline-secondary" asp-page="/Admin/Media/Picker">Open Picker</a>
                    <a class="btn btn-outline-secondary" asp-page="/Admin/Media/List">Open Library</a>
                    <a class="btn btn-outline-danger" asp-page="/Admin/Media/Trash">Open Trash</a>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    (function () {
        function getToken() {
            const el = document.querySelector('#antiForgeryForm input[name="__RequestVerificationToken"]');
            return el ? el.value : "";
        }

        async function postJson(url, payload) {
            const res = await fetch(url, {
                method: "POST",
                headers: {
                    "Content-Type": "application/json",
                    "RequestVerificationToken": getToken()
                },
                body: JSON.stringify(payload)
            });
            return res.json();
        }

        const undoBar = document.getElementById("undoBar");
        const undoBtn = document.getElementById("undoBtn");

        let lastDeletedId = null;
        let timer = null;

        function showUndo(id) {
            lastDeletedId = id;
            undoBar.classList.remove("d-none");

            clearTimeout(timer);
            timer = setTimeout(() => {
                undoBar.classList.add("d-none");
                lastDeletedId = null;
            }, 10000); // 10s window
        }

        document.addEventListener("click", async function (e) {
            const btn = e.target.closest("[data-media-delete]");
            if (!btn) return;

            e.preventDefault();

            const id = parseInt(btn.dataset.mediaDelete, 10);
            if (!id) return;

            const result = await postJson("?handler=Delete", { id });
            if (!result.ok) {
                alert(result.message || "Delete failed.");
                return;
            }

            // Immediate UI feedback
            btn.closest("tr")?.remove();
            showUndo(id);
        });

        undoBtn?.addEventListener("click", async function () {
            if (!lastDeletedId) return;

            const result = await postJson("?handler=Restore", { id: lastDeletedId });
            if (!result.ok) {
                alert(result.message || "Restore failed.");
                return;
            }

            // Simplest + safest: reload list
            window.location.reload();
        });
    })();
</script>
